{
  "name": "jonathanbell.github.io",
  "type": "module",
  "version": "2.12.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "cv:pdf": "npx --yes tsx scripts/generate-cv-pdf.ts",
    "prepare": "husky install",
    "playwright:install": "npx playwright install",
    "test": "astro build --silent && NODE_OPTIONS='--disable-warning=ExperimentalWarning' playwright test",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier --log-level silent . --write",
    "lint": "eslint",
    "lint:fix": "eslint --fix --quiet",
    "commit": "git-cz",
    "commit:stage": "git add --interactive && git-cz",
    "commit:stage:all": "git add . && git-cz",
    "commit:lint": "commitlint --from=$(git rev-list --max-parents=0 HEAD) --to=HEAD",
    "changelog:create": "git fetch --tags --prune --prune-tags && conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && echo 'CHANGELOG.md staged in Git'",
    "release": "npx --yes tsx ./scripts/release.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.2",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/ubuntu-sans": "^5.2.10",
    "astro": "^5.0.2",
    "globals": "^17.0.0",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.13.0",
    "sass": "^1.77.4"
  },
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.42.1",
    "@types/node": "^25.0.0",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.8",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^8.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.18.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
